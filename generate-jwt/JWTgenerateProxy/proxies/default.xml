<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<ProxyEndpoint name="default">
  <Description/>
  <FaultRules>
    <FaultRule name="noJWTGeneration">
      <Condition>JWT.failed == "true"</Condition>
      <Step>
        <Name>RF-JWTerror</Name>
      </Step>
    </FaultRule>
  </FaultRules>
  <PreFlow name="PreFlow">
    <Request/>
    <Response>
      <Step>
        <Name>AM-setResponse</Name>
      </Step>
    </Response>
  </PreFlow>
  <PostFlow name="PostFlow">
    <Request/>
    <Response/>
  </PostFlow>
  <Flows>
    <Flow name="generateJWT">
      <Description/>
      <Request>
        <Step>
          <Name>AM-assignSecretKey</Name>
        </Step>
        <Step>
          <Name>RF-MissingSecretKey</Name>
          <Condition> request.header.client-id == "" || request.header.client-id == null</Condition>
        </Step>
        <Step>
          <Name>VA-verifyKey</Name>
        </Step>
        <Step>
          <Name>RF-apikeyFault</Name>
          <Condition>oauthV2.VA-verifyKey.failed == "true"</Condition>
        </Step>
        <Step>
          <Name>JWT-generate</Name>
        </Step>
      </Request>
      <Response/>
      <Condition>(proxy.pathsuffix MatchesPath "/generateJWT") and (request.verb = "GET")</Condition>
    </Flow>
  </Flows>
  <HTTPProxyConnection>
    <BasePath>/generate-jwt</BasePath>
    <Properties/>
  </HTTPProxyConnection>
  <RouteRule name="default">
    <TargetEndpoint>default</TargetEndpoint>
  </RouteRule>
</ProxyEndpoint>
