<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<MessageLogging continueOnError="false" enabled="true" name="ML-outcomeLog">
  <DisplayName>ML-outcomeLog</DisplayName>
  <Syslog>
    <Host>syslog.example.com</Host>
    <Port>514</Port>
    <Message>
          {
                "responseCode": "{response.status.code}",
                "responsePhrase": "{response.reason.phrase}",
                "responsecontent": "{response.content}"
            }
    </Message>
    <Format>RFC5424</Format>
  </Syslog>
  <logLevel>INFO</logLevel>
</MessageLogging>
